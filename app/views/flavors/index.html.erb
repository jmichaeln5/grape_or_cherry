<div class="jumbotron jumbotron-fluid">
  <div class="container text-center">
    <h1 class="display-4 ">Flavors</h1>

    <br>
    <%= link_to 'New Flavor', new_flavor_path, class:"btn btn-success btn-block btn-lg" %>
    <br>

    <br>


    <% @flavors.each do |flavor| %>
    <div class="card text-center">
      <br>
      <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                        <div class="card-body">

                            <ul>
                                <li><%= flavor.cherry %></li>
                                <li><%= flavor.grape %></li>
                            </ul>

                     </div>
                 </div>
            </div>
      </div>

      <br>
          <%= link_to 'Show ', flavor %> <%= link_to 'Edit ', edit_flavor_path(flavor) %> <%= link_to 'Destroy ', flavor, method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>

    </div>
  </div>
  <br>
  <% end %>


<br>

  <%= link_to 'Back', :back , class: "btn btn-primary btn-lg" %>

</div>
</div>
